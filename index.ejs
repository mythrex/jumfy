			</div>
		</section>

		<!-- Services -->
		<section class="services">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-6">
						<h1 class="text-primary">Social Media <br/> Services</h2>
						<div class="row">
							<div class="col-sm-12 col-lg-6"><div class="card bg-transition text-white">
								<div class="card-body">
